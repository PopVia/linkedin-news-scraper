{
    "manifest_version": 3,
    "name": "LinkedIn News Scraper",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "tabs",
        "scripting",
        "downloads"
    ],
    "host_permissions": [
        "*://*.linkedin.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["dashboard.html", "dashboard.js", "dashboard.css"],
            "matches": ["<all_urls>"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
